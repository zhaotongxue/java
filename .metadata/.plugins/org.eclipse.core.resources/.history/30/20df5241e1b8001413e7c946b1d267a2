package com.example.listview;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import android.os.Bundle;
import android.support.v7.app.ActionBarActivity;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import android.widget.SimpleAdapter;

public class MainActivity extends ActionBarActivity {
	private ListView my_listView;
	private ArrayAdapter<String> myArrayAdapter;
	private SimpleAdapter mySimpleAdapter;
	private List<Map<String, Object>> data;
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		//data=this.getData();
		//String[] date={"赵同学","Soga","gogoog","老忽悠","Just this"};
		//int id=R.layout.text_items;
//		myArrayAdapter=new ArrayAdapter<String>(this,id,R.id.my_text,date);
//		//myArrayAdapter=new ArrayAdapter<String>(this,R.id.my_listView,date);
//		my_listView=(ListView)findViewById(R.id.my_listView);
//		my_listView.setAdapter(myArrayAdapter);
		mySimpleAdapter=new SimpleAdapter(this, getData(), R.layout.items, new String[]{"image","text"},new int[]{R.id.my_Image,R.id.my_Text});
		my_listView.setAdapter(mySimpleAdapter);
	}
	private List<Map<String,Object>> getData(){
		for(int i=0;i<10;i++){
			Map<String,Object> map=new HashMap<String, Object>();
			map.put("image",R.drawable.ic_launcher);
			map.put("text", "赵同学:"+i);
			data.add(map);
		}
		return data;
	} 

}
